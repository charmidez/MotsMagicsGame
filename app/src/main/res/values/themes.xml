<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MotsMagics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_cg_blue</item>
        <item name="colorPrimaryVariant">@color/black_xiketic</item>
        <item name="colorOnPrimary">@color/white_baby_power</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light_cyan</item>
        <item name="colorSecondaryVariant">@color/blue_cg_blue</item>
        <item name="colorOnSecondary">@color/black_xiketic</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MotsMagicsNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
