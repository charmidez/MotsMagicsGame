            android:maxLength="1"
            android:textStyle="bold"
            android:lines="1"
            android:maxLines="1"
            android:ems="1"
            android:maxEms="1"
            android:background="@drawable/edittext_border"/>

        <EditText
            android:id="@+id/editText_i_5"
            android:layout_width="@dimen/editText_dimen"
            android:layout_height="@dimen/editText_dimen"
            android:padding="5dp"
            android:gravity="center"
